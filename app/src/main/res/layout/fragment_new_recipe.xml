<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NewRecipeFragment">

    <data>
        <variable
            name="viewModel"
            type="edu.quinnipiac.ser210.recipeapp.RecipeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/recipe" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text"
                android:text="@={viewModel.newRecipeName}"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:hint="Recipe Name" />

            <TableLayout
                android:id="@+id/infoTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TableRow
                    android:id="@+id/prepTime" >

                    <TextView
                        android:id="@+id/prepTimeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prep Time:"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/prepTimeEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:inputType="number"
                        android:text="@{viewModel.newPrepTime}"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/prepMinLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="min(s)"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/cookTime" >

                    <TextView
                        android:id="@+id/cookTimeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cook Time:"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/cookTimeEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:inputType="number"
                        android:text="@={viewModel.newCookTime}"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/cookMinLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="min(s)"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/ingredientsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="INGREDIENTS"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/ingrUnderline"
                android:layout_width="200dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="@color/black" />

            <EditText
                android:id="@+id/ingredient1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Ingredient"
                android:inputType="text"
                android:text="@={viewModel.newIngredientList[0]}"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ingredient2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Ingredient"
                android:inputType="text"
                android:text="@={viewModel.newIngredientList[1]}"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ingredient3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Ingredient"
                android:inputType="text"
                android:text="@={viewModel.newIngredientList[2]}"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ingredient4"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Ingredient"
                android:inputType="text"
                android:text="@={viewModel.newIngredientList[3]}"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ingredient5"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Ingredient"
                android:inputType="text"
                android:text="@={viewModel.newIngredientList[4]}"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ingredient6"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Ingredient"
                android:inputType="text"
                android:text="@={viewModel.newIngredientList[5]}"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ingredient7"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Ingredient"
                android:inputType="text"
                android:text="@={viewModel.newIngredientList[6]}"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ingredient8"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Ingredient"
                android:inputType="text"
                android:text="@={viewModel.newIngredientList[7]}"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/instructionsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="INSTRUCTIONS"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/instrUnderline"
                android:layout_width="200dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="@color/black" />

            <TableLayout
                android:id="@+id/instrTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:stretchColumns="1" >

                <TableRow
                    android:id="@+id/instruction1" >

                    <TextView
                        android:id="@+id/instrLabel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:ems="3"
                        android:inputType="number"
                        android:text="1."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/instr1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:hint="instruction"
                        android:text="@={viewModel.newInstructions[0]}"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/instruction2" >

                    <TextView
                        android:id="@+id/instrLabel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:ems="3"
                        android:inputType="number"
                        android:text="2."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/instr2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:hint="instruction"
                        android:text="@={viewModel.newInstructions[1]}"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/instruction3" >

                    <TextView
                        android:id="@+id/instrLabel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:ems="3"
                        android:inputType="number"
                        android:text="3."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/instr3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:hint="instruction"
                        android:text="@={viewModel.newInstructions[2]}"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/instruction4" >

                    <TextView
                        android:id="@+id/instrLabel4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:ems="3"
                        android:inputType="number"
                        android:text="4."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/instr4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:hint="instruction"
                        android:text="@={viewModel.newInstructions[3]}"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/instruction5" >

                    <TextView
                        android:id="@+id/instrLabel5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:ems="3"
                        android:inputType="number"
                        android:text="5."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/instr5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:hint="instruction"
                        android:text="@={viewModel.newInstructions[4]}"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/instruction6" >

                    <TextView
                        android:id="@+id/instrLabel6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:ems="3"
                        android:inputType="number"
                        android:text="6."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/instr6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:hint="instruction"
                        android:text="@={viewModel.newInstructions[5]}"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/instruction7" >

                    <TextView
                        android:id="@+id/instrLabel7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:ems="3"
                        android:inputType="number"
                        android:text="7."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/instr7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:hint="instruction"
                        android:text="@={viewModel.newInstructions[6]}"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/instruction8" >
                    <TextView
                        android:id="@+id/instrLabel8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:ems="3"
                        android:inputType="number"
                        android:text="8."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/instr8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:hint="instruction"
                        android:text="@={viewModel.newInstructions[7]}"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="ADD"
                android:OnClick="@={() -> viewModel.addRecipe()}"/>

        </LinearLayout>

    </ScrollView>

</layout>



